    <div class="container">
        <form style="margin-bottom: 30px">
            <div class="row">
                <div class="form-group col-md-offset-3 col-md-3 col-sm-offset-2 col-sm-4 col-xs-offset-2 col-xs-8">
                    <label>Search Type</label>
                    <div class="radio">
                        <label><input type="radio" name="search-type" value="GstNo" checked="checked" />GST Number</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="search-type" value="BizRegNo" />Business Registration Number</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="search-type" value="BizName" />Business Name</label>
                    </div>
                </div>
                <div class="col-md-offset-0 col-md-3 col-sm-offset-0 col-sm-4 col-xs-offset-2 col-xs-8">
                    <div class="form-group">
                        <label for="search-input">Search For</label>
                        <input type="text" id="search-input" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Lookup GST Status</button>
                </div>
            </div>
        </form>
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>GST Number</th>
                    <th style="vertical-align: top">Business Name</th>
                    <th>Commence Date</th>
